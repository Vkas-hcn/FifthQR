<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="creteType"
            type="Integer"
            android:value="1" />
        <variable
            name="showCrete"
            type="Boolean"
            android:value="false" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{creteType == 6 ? View.VISIBLE : View.GONE}">

        <LinearLayout
            android:id="@+id/ll_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/et_content_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ser"
                android:gravity="start"
                android:padding="12dp"
                android:text="First Name:"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_content_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_ser"
                android:gravity="start"
                android:padding="12dp"
                android:text="Last Name:"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_content_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_ser"
                android:gravity="start"
                android:padding="12dp"
                android:inputType="number"
                android:text="Mobile:"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_content_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_ser"
                android:gravity="start"
                android:padding="12dp"
                android:text="Email:"
                android:inputType="textEmailAddress"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_content_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_ser"
                android:gravity="start"
                android:padding="12dp"
                android:text="Company:"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_content_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_ser"
                android:gravity="start"
                android:padding="12dp"
                android:text="Address:"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
